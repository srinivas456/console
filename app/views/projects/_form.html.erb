<%= simple_form_for @project do |f| %>
  <%= f.input :ProjectName %>
  <%= f.input :version %>
  <%= f.input :Title, :label => 'Application Name' %>
  <%= f.input :devicetype, :label => 'Target Device', :collection => ["Phone", "Tablet", "Both"], :set_default => 'Phone' %>
  <%= f.input :viewtype, :label => '', :collection => ["Navi-Based","Tab-Based","View-Based"], :as => :radio, :set_default => "Navi-Based" %>
  <%= f.submit %>
<% end %>


